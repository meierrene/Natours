header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    a.nav__el(href='/')
      img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout.nav__el--cta(href='/logout') Log out
      a.nav__el.nav__el--cta(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`photo`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--cta(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up